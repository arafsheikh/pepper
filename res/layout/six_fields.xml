        android:id="@+id/six_editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/six_lable3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Lable 3" />

    <EditText
        android:id="@+id/six_editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/six_lable4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Lable 4" />

    <EditText
        android:id="@+id/six_editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/six_lable5"
        android:layout_width="wrap_content"
