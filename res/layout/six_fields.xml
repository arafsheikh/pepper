        android:text="Lable 6" />

    <EditText
        android:id="@+id/six_editText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="number" />

</LinearLayout>